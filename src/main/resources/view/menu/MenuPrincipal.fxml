<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.MenuController"
           prefWidth="1500.0" prefHeight="700.0"
           stylesheets="@style.css">

    <!-- StackPane centraliza tudo -->
    <children>
        <!-- BorderPane define a estrutura principal -->
        <BorderPane prefWidth="1500.0" prefHeight="700.0">

            <!-- Centro do BorderPane: conteúdo -->
            <center>
                <VBox alignment="CENTER" spacing="30">
                    <!-- Título -->
                    <Text fx:id="titulo" text="CONFIGURAÇÕES INICIAIS" textAlignment="CENTER">
                        <font>
                            <Font size="40.0" />
                        </font>
                    </Text>

                    <!-- Botões empilhados -->
                    <VBox alignment="CENTER" spacing="20">
                        <Button fx:id="VerificarBancoDeDados"
                                text="VERIFICAR BANCO DE DADOS"
                                onAction="#GoToVerificarBancoDeDados"
                                maxWidth="400"
                                prefHeight="50">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <Button fx:id="CadastroCorredores"
                                text="CADASTRAR CORREDOR"
                                onAction="#GoToCadastroCorredores"
                                maxWidth="400"
                                prefHeight="50">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <Button fx:id="GerenciarCorrida"
                                text="GERENCIAR CORRIDA"
                                onAction="#GoToGerenciarCorrida"
                                maxWidth="400"
                                prefHeight="50">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <Button fx:id="TabelaCorredores"
                                text="TABELA CORREDORES"
                                onAction="#GoToTabelaCorredores"
                                maxWidth="400"
                                prefHeight="50">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </VBox>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>